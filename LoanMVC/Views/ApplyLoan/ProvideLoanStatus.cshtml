@model IEnumerable<LoanMVC.Models.LoanApplicantType>

    @{
        ViewBag.Title = "ProvideLoanStatus";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>ProvideLoanStatus</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicantId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfLoan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusOfLoan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>Loan Details</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicantId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeOfLoan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusOfLoan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
            
                <td>
                    
              
                @if (item.StatusOfLoan == "Approved")
                {
                     @Html.ActionLink("Loan Details", "paymentOptions", "LoanDetails", new { id=item.ApplicantId},null)
                    //Html.ActionLink("Create New Part", "CreateParts", "PartList", new { parentPartId = 0 }, null)
                }
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Back", "Index", "ApplyLoan")
    </p>

